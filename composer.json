{
    "name": "bolt/standard-project",
    "type": "project",
    "description": "Bolt 4 standard project skeleton",
    "license": "MIT",
    "require": {
        "bolt/bolt": "^4.0",
        "symfony/flex": "^1.2",
        "bolt/bolt-assets": "^4.0@beta"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.1",
        "symfony/debug-bundle": "^4.3",
        "symfony/dotenv": "^4.3",
        "symfony/maker-bundle": "^1.11",
        "symfony/stopwatch": "^4.3",
        "symfony/web-profiler-bundle": "^4.3",
        "symfony/web-server-bundle": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bolt/four.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bobdenotter/DoctrineExtensions",
            "no-api": true
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "bolt:install-assets": "symfony-cmd"
        },
        "post-create-project-cmd": [
                "cp -n .env.dist .env || true"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "bin/console bolt:info"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "bin/console bolt:info"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^4.3"
        }
    }
}
