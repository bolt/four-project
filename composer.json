{
    "name": "bolt/project",
    "type": "project",
    "description": "Bolt 4 standard project skeleton",
    "license": "MIT",
    "require": {
        "bolt/assets": "^4.0",
        "bolt/core": "^4.0",
        "bolt/newswidget": "^1.1",
        "bolt/themes": "^3.2.3",
        "symfony/flex": "^1.6",
        "bobdenotter/configuration-notices": "^1.0",
        "bobdenotter/weatherwidget": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "bolt:copy-assets": "symfony-cmd"
        },
        "post-create-project-cmd": [
            "php bin/post-create-project.php",
            "php bin/console bolt:copy-themes"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "php bin/console extensions:configure --with-config",
            "php bin/console bolt:info"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "php bin/console extensions:configure",
            "php bin/console bolt:info"
        ],
        "periodical-tasks": [
            "security-checker security:check"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^5.1"
        },
        "public-dir": "public"
    }
}
